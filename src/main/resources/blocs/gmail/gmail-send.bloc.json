{
    "name":"Gmail Send",
    "description":"Send an email from your gmail account",
    "intent":"subscribe",
    "input-types":["multipart/mixed,text/html,text/plain"],
    "output-types":["multipart/mixed,text/html,text/plain"],
    "params":[
        {
            "name":"gmail.username",
            "description":"your gmail email address"
        } ,
        {
            "name":"gmail.password",
            "description":"your gmail account password"
        },
        {
            "name":"gmail.toAddress",
            "description":"Listen to emails with a specific label",
            "optional":"true",
            "default":"INBOX"
        },
        {
            "name":"gmail.archive.messages",
            "description":"Should read messages be automatically archived",
            "optional":"true",
            "default":"false"
        }
    ],
    "contents":[
        {
            "name" : "From Address",
            "expression" : "#[message.outboundProperties['fromAddress']]"
        },
        {
            "name" : "ReplyTo Address",
            "expression" : "#[message.outboundProperties['replyToAddress']]"
        },
        {
            "name" : "Email Subject",
            "expression": "#[message.outboundProperties['subject']]"
        },
        {
            "name": "Received Date",
            "expression" : "#[message.outboundProperties['sentDate']]"
        },
        {
            "name" : "Email Body",
            "expression": "#[message.payload]"
        }
    ],
    "snippets":[
        {
            "name":"Send via Gmail",
            "role":"main",
            "description":"Sends an email via your Gmail Inbox",
            "snippet-uri":"gmail-send.xml.snippet"
        }
    ]
}
